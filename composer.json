{
  "name": "faramarz91/mini-orm",
  "description": "A simple, lightweight ORM inspired by Laravel Eloquent",
  "type": "library",
  "keywords": ["orm", "database", "eloquent", "activerecord", "php"],
  "license": "MIT",
  "authors": [
    {
      "name": "Faramarz Mehrnami",
      "email": "mfaramarz1991@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-pdo": "*",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "suggest": {
    "monolog/monolog": "For logging support",
    "vlucas/phpdotenv": "For environment configuration"
  },
  "autoload": {
    "psr-4": {
      "MiniORM\\": "src/",
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MiniORM\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests/"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
